# ACE-Step Diagnostic Configuration
# Environment variables to control diagnostic behavior in Docker container

# Enable/disable automatic diagnostics on generated files
ACE_AUTO_DIAGNOSE=true

# Output directory for generated files (already defined in docker-compose)
ACE_OUTPUT_DIR=/app/outputs

# Directory for diagnostic reports (relative to ACE_OUTPUT_DIR)
ACE_DIAGNOSTIC_DIR=/app/outputs/diagnostics

# Diagnostic logging level (DEBUG, INFO, WARNING, ERROR)
ACE_DIAGNOSTIC_LOG_LEVEL=INFO

# Enable diagnostic plots (may require X11 forwarding for display)
ACE_DIAGNOSTIC_PLOTS=false

# Cleanup old diagnostic reports automatically (days to keep)
ACE_DIAGNOSTIC_CLEANUP_DAYS=30

# Enable performance tracking for diagnostics
ACE_DIAGNOSTIC_PERFORMANCE=true

# File patterns to diagnose (comma-separated)
ACE_DIAGNOSTIC_PATTERNS=*.wav,*.flac

# Maximum file size to diagnose (in MB, 0 for no limit)
ACE_DIAGNOSTIC_MAX_SIZE=100